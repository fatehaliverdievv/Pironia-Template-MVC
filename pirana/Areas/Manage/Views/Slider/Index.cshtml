
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Slider>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Img</th>
                          <th>Title</th>
                          <th>Secondary Title</th>
                          <th>Short Description</th>
                          <th>Order</th>
                          <th>Button Name</th>
                        </tr>
                      </thead>
                      <tbody>
            @foreach (Slider item in Model)
            {
                                            <tr>
                                              <td>@item.Id</td>
                                              <td><img width="40" src="@item.ImgUrl"></td>
                                              <td>@item.Title</td>
                                              <td>@item.SecondaryTitle</td>
                                              <td>@item.Description</td>
                                              <td>@item.Order</td>
                                              <td>@item.ButtonName</td>
                                              <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                              <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                            </tr>
            }
                      </tbody>  
                    </table>
                  </div>
