@model IEnumerable<Category>
<div class="table-responsive">
 <table class="table">
   <thead>
     <tr>
       <th>Id</th>
       <th>Name</th>
       <th>Count</th>
     </tr>
   </thead>
   <tbody>
   @foreach (Category item in Model)
   {
     <tr>
       <td>@item.Id</td>
       <td>@item.Name</td>
       @*<td>@item.Products?.Count</td>*@
       <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
       <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
     </tr>
   }
   </tbody>  
 </table>
</div>
