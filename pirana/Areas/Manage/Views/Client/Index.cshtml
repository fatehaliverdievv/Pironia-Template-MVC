
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Client>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Img</th>
                          <th>Name</th>
                          <th>Surname</th>
                          <th>Position</th>
                          <th>FeedBack</th>
                        </tr>
                      </thead>
                      <tbody>
            @foreach (Client item in Model)
            {
                                    <tr>
                                      <td>@item.Id</td>
                                      <td><img width="40" src="@item.ImgUrl"></img></td>
                                      <td>@item.Name</td>
                                      <td>@item.Surname</td>
                                      <td>@item.Position</td>
                                      <td>@item.Feedback</td>
                                      <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Client" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                      <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Client" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                    </tr>
            }
                      </tbody>  
                    </table>
                  </div>

