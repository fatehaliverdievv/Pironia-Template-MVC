@model ShippingArea
<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update ShippingArea</h4>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label asp-for="Name"></label>
                      <input asp-for="Name" class="form-control">
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Info"></label>
                      <input asp-for="Info" class="form-control">
                      <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="LogoUrl"></label>
                      <input asp-for="LogoUrl" class="form-control">
                      <span asp-validation-for="LogoUrl" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Update</button>
                    <button class="btn btn-light" asp-area="Manage" asp-controller="ShippingArea" asp-action="Index">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
