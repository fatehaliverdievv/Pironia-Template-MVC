@model HomeVM
@section scripts{
        <script>
               //let btnquickview=$(".quickView");
               // btnquickview.click(function(){
               //     let productid = $(this).attr('prodid')
               //     console.log(productid);
               //     //fetch('home/GetViewComponent' + new URLSearchParams({
               //     //id: productid
               //     //}))

               // })
                   let btnquick = $(".quuickview-btn");
                   btnquick.click(function(e){
                   e.preventDefault();
                   let productid = $(this).attr('prodid')
                   $('#quickview').modal('show');
                   $.ajax({
                   type: "POST",
                   url: this.href,
                   data: {
                        "id":productid
                   },
                   success: function(response) 
                   {
                        $("#quickview").html(response);     
                   },
                   error, function(err){
                       console.log(err)
                   }
                })});
               let take = 4;
               let btn = document.querySelector("#loadMore");
               btn.addEventListener("click", function(e){
               e.preventDefault();
               $.ajax({
               type: "POST",
               url: this.href,
               data: {
                   "skip": $(".prdct").children().length,
                   "take": take
               },
               success: function(data){
                     if (data.length < take || $(".prdct").children().length <= $("#prod-count").val()) {
                       btn.remove();
                   }
                   $(".prdct").append(data)
               },
               error: function(err){
                   console.log(err)
               }
               });
            })
        </script>
}
        
      <div class="slider-area">
