
@{
    ViewData["Title"] = "DeletedProduct";
}

@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Product>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>
                          <th>Description</th>
                          <th>CostPrice</th>
                          <th>SellPrice</th>
                          <th>SKU</th>
                          <th>Discount</th>
                          <th>Category</th>
                          <th>Colors</th>
                          <th>Sizes</th>
                          <th colspan="2">Action</th>
                        </tr>
                      </thead>
                      <tbody>
            @foreach (var item in Model)
            {   
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CostPrice $</td>
                                <td>@item.SellPrice $</td>
                                <td>@item.SKU</td>
                                <td>@item.Discount</td>
                                    <td>
                        @foreach (var category in item?.ProductCategories.Where(pc => pc.ProductId == item.Id))
                        {
                                            <span>@category.Category.Name</span>
                        }        
                                    </td>
                                    <td>
                        @foreach (var color in item?.ProductColors.Where(pc => pc.ProductId == item.Id))
                        {
                                            <span>@color.Color.Name</span>
                        }        
                                    </td>
                                    <td>
                        @foreach (var size in item?.ProductSizes.Where(ps => ps.ProductId == item.Id))
                        {
                                            <span>@size.Size.Name</span>
                        }        
                                    </td>
                                    <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Product" asp-action="DeletePermanently" asp-route-id="@item.Id">Delete Permanently </a></td>
                                <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            </tr>
            }   
                      </tbody>  
                    </table>
                  </div>

