
@{
    ViewData["Title"] = "Login";
}
@model UserLoginVm
<main class="main-content">
        <div
          class="breadcrumb-area breadcrumb-height"
          data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg"
        >
          <div class="container h-100">
            <div class="row h-100">
              <div class="col-lg-12">
                <div class="breadcrumb-item">
                  <h2 class="breadcrumb-heading">Login </h2>
                  <ul>
                    <li>
                      <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>Login </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="login-register-area section-space-y-axis-100">
          <div class="container">
            <div class="row">
             <div >
                <form method="post">
                  <div class="login-form">
                    <h4 class="login-title">Login</h4>
                    <div class="row">
                      <div class="col-lg-12">
                        <label asp-for="UsernameorEmail"> Username or Email </label>
                        <input type="text" asp-for="UsernameorEmail" placeholder="Username or Email" />
                         <span asp-validation-for="UsernameorEmail"/>
                      </div>
                      <div class="col-lg-12">
                        <label asp-for="Password"> Password</label>
                        <input type="password" asp-for="Password" placeholder="Password" />
                         <span asp-validation-for="Password"/>
                      </div>
                       <div class="col-md-6">
                        <label asp-for="IsPersistance">Remember me</label>
                        <input asp-for="IsPersistance"/>
                        <span asp-validation-for="IsPersistance"></span>
                      </div>
                      <div asp-validation-summary="ModelOnly"></div>
                      <a class="mb-3" asp-action="Register">Don't have an Account? Register </a>
                        <button
                          class="btn btn-custom-size lg-size btn-pronia-primary"
                        >
                          Login
                        </button>
                      </div>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </main>