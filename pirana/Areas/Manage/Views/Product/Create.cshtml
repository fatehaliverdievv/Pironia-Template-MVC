@model CreateProductVM
<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create Products</h4>
                  <form class="forms-sample" method="post"  enctype="multipart/form-data">
                    <div class="form-group">
                      <label asp-for="Name"></label>
                      <input asp-for="Name" class="form-control">
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Description"></label>
                      <input asp-for="Description" class="form-control">
                      <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="CostPrice"></label>
                      <input asp-for="CostPrice" class="form-control">
                      <span asp-validation-for="CostPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="SellPrice"></label>
                      <input asp-for="SellPrice" class="form-control">
                      <span asp-validation-for="SellPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Discount"></label>
                      <input asp-for="Discount" class="form-control">
                      <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="CoverImage"></label>
                      <input accept="image/*" asp-for="CoverImage" class="form-control">
                      <span asp-validation-for="CoverImage" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="HoverImage"></label>
                      <input accept="image/*" asp-for="HoverImage" class="form-control">
                      <span asp-validation-for="HoverImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="OtherImages"></label>
                      <input accept="image/*" asp-for="OtherImages" class="form-control">
                      <span asp-validation-for="OtherImages" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="SizeIds">Sizes</label>
                      <select asp-for="SizeIds" asp-items="@ViewBag.Sizes" ></select>
                      <span asp-validation-for="SizeIds" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="ColorIds">Colors</label>
                      <select asp-for="ColorIds" asp-items="@ViewBag.Colors"></select>
                      <span asp-validation-for="ColorIds" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="CategoryIds">Categories</label>
                      <select asp-for="CategoryIds" asp-items="@ViewBag.Categories"></select>
                      <span asp-validation-for="CategoryIds" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <button class="btn btn-light" asp-area="Manage" asp-controller="Product" asp-action="Index">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
